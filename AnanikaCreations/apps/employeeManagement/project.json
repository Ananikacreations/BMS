{
  "name": "employeeManagement",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/employeeManagement/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/employeeManagement",
        "index": "apps/employeeManagement/src/index.html",
        "main": "apps/employeeManagement/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "apps/employeeManagement/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/your-app/src/assets",
            "output": "assets"
          },
          {
            "glob": "favicon.ico",
            "input": "apps/your-app/src",
            "output": "/"
          }
        ],
        "styles": [
          "apps/employeeManagement/src/styles.css"
        ],
        "scripts": [
          "node_modules/flowbite/dist/flowbite.js"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "employeeManagement:build:production"
        },
        "development": {
          "buildTarget": "employeeManagement:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "employeeManagement:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/employeeManagement/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "employeeManagement:build",
        "spa": true
      }
    }
  }
}
